<UserControl x:Class="CommunicationProtocol.WpfApp.SystemSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommunicationProtocol.WpfApp"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox Height="80" VerticalAlignment="Top">
            <DockPanel>
                <WrapPanel DockPanel.Dock="Left" Margin="0,10,0,0">
                    <TextBlock Text="IP :" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding IpAddress}" Style="{x:Null}" Width="150"/>
                </WrapPanel>
                <WrapPanel  Margin="50,10">
                    <TextBlock Text="Port :" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding Port}" Style="{x:Null}" Width="150"/>
                </WrapPanel>
                <Button Content="Save" Click="Save" DockPanel.Dock="Right" 
                        VerticalAlignment="Top" HorizontalAlignment="Right"
                        Width="100"/>
            </DockPanel>
        </GroupBox>
    </Grid>
</UserControl>
